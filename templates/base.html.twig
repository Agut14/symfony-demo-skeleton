<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="{% block body_id %}{% endblock %}">
        {% block header %}
            <header class="p-3 bg-dark text-white">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                        <ul class="nav col-6">
                            {% if app.user %}
                                <li><a href="{{ path('homepage') }}" class="nav-link px-2 {{ app.request.pathInfo == '/' ? 'text-white' : 'text-secondary' }}">{{ 'menu.item.home'|trans }}</a></li>
                                <li><a href="{{ path('category_index') }}" class="nav-link px-2 {{ app.request.pathInfo == '/category/' ? 'text-white' : 'text-secondary' }}">{{ 'menu.item.categories'|trans }}</a></li>
                                <li><a href="{{ path('product_index') }}" class="nav-link px-2 {{ app.request.pathInfo == '/product/' ? 'text-white' : 'text-secondary' }}">{{ 'menu.item.products'|trans }}</a></li>
                            {% endif %}
                        </ul>
                        <ul class="nav col-4">
                            <li><a class="nav-link px-2 text-secondary" href="{{ path(app.request.get('_route', 'blog_index'), app.request.get('_route_params', [])|merge({_locale: 'en'})) }}">{{ 'menu.item.lang.en'|trans }}</a></li>
                            <li><a class="nav-link px-2 text-secondary" href="{{ path(app.request.get('_route', 'blog_index'), app.request.get('_route_params', [])|merge({_locale: 'es'})) }}">{{ 'menu.item.lang.es'|trans }}</a></li>
                        </ul>
                        <ul class="nav col-2">
                            {% if app.user %}
                                <li><a href="{{ path('app_logout') }}" class="nav-link px-2 text-secondary">Logout</a></li>
                            {% else %}
                                <li><a href="{{ path('login') }}" class="nav-link px-2 text-secondary">Login</a></li>
                                <li><a href="{{ path('app_register') }}" class="nav-link px-2 text-secondary">Register</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </header>
        {% endblock %}

        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div id="main" class="col-sm-12 mt-4">
                        {% block main %}{% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
    </body>
</html>
